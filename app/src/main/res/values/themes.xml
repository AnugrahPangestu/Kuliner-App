<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KulinerJepang" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blues</item>
        <item name="colorPrimaryVariant">@color/blues</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleTextStyle">@color/pink</item>
        <item name="actionMenuTextColor">@color/pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="porfilName">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/blues</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="porfilEmail">
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_detail">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/blues</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_decs_detail">
        <item name="android:textSize">20sp</item>
        <item name='android:textColor'>@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="decs_detail">
        <item name="android:textSize">15sp</item>
        <item name='android:textColor'>@color/darkgrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="pink">#8A04A8</color>
    <color name="bluesky">#12DEF0</color>
    <color name="blues">#03A9F4</color>
    <color name="gray">#616161</color>
    <color name="darkgrey">#444444</color>
</resources>